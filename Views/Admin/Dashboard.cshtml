@model Zuwarak.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "إحصائيات";
}

<div class="container mt-4">

    <h2 class="mb-4"> <i class="bi bi-reception-4"></i> إحصائيات</h2>

    <!-- Cards -->
    <div class="row">

        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body text-center">
                    <h5>زيارات اليوم</h5>
                    <h2>@Model.TodayVisits</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body text-center">
                    <h5>زيارات هذا الشهر</h5>
                    <h2>@Model.MonthlyVisits</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-dark mb-3">
                <div class="card-body text-center">
                    <h5>عدد الموظفين</h5>
                    <h2>@Model.EmployeesCount</h2>
                </div>
            </div>
        </div>

    </div>

    <!-- Last Visits -->
    <div class="card mt-4">
        <div class="card-header">
            آخر 5 زيارات
        </div>
        <div class="card-body p-0">
            <table class="table mb-0 text-center">
                <thead>
                    <tr>
                        <th>اسم الزائر</th>
                        <th>تاريخ الزيارة</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var v in Model.LastVisits)
                    {
                        <tr>
                            <td>@v.FullName</td>
                            <td>@v.VisitDate.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
