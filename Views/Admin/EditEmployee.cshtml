@model Zuwarak.Models.Employee

@{
    ViewData["Title"] = "تعديل بيانات موظف";
}

<div class="container mt-4">

    <h2 class="mb-4"> تعديل بيانات الموظف </h2>

    <form asp-action="EditEmployee" method="post" class="card p-4 shadow">

        <!-- مهم جدًا -->
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="FullName" class="form-label">الاسم الكامل</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="JobTitle" class="form-label">المسمى الوظيفي</label>
            <input asp-for="JobTitle" class="form-control" />
            <span asp-validation-for="JobTitle" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Department" class="form-label">القسم</label>
            <input asp-for="Department" class="form-control" />
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
            <input asp-for="Email" class="form-control" readonly />
            <small class="text-muted">
                لا يمكن تعديل البريد الإلكتروني
            </small>
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label">رقم الهاتف</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Role" class="form-label">الدور الوظيفي</label>
            <select asp-for="Role" class="form-control">
                <option value="Admin">Admin</option>
                <option value="Reception">Reception</option>
                <option value="Security">Security</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success flex-fill">
                حفظ التعديلات
            </button>

            <a asp-action="EmployeesList" class="btn btn-secondary flex-fill">
                رجوع
            </a>
        </div>

    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
